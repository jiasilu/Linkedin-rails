<p id="notice"><%= notice %></p>

<h1>Educations</h1>

<table>
  <thead>
    <tr>
      <th>School</th>
      <th>School name</th>
      <th>School location</th>
      <th>Linkedin url</th>
      <th>School url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.school_id %></td>
        <td><%= education.school_name %></td>
        <td><%= education.school_location %></td>
        <td><%= education.linkedin_url %></td>
        <td><%= education.school_url %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

